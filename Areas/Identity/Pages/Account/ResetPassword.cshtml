@page
@model ResetPasswordModel
@{ ViewData["Title"] = "Reset password"; Layout = "~/Pages/Shared/_Layout2.cshtml";}


<link rel="stylesheet" href="~/css/resetpassword.css" />
<section class="u-clearfix u-grey-10 u-section-1" id="carousel_42de">
    <div class="u-expanded-width u-palette-2-base u-shape u-shape-rectangle u-shape-1" style="background-color: dodgerblue;"></div>
    <div class="u-align-left u-border-1 u-border-grey-40 u-container-style u-group u-white u-group-1">
        <div class="u-container-layout u-container-layout-1">
            <h2 class="u-custom-font u-font-oswald u-text u-text-1">Repor&nbsp;password</h2>
            <div class="u-align-left u-form u-form-1">
                <form method="post" class="u-clearfix u-form-spacing-28 u-form-vertical u-inner-form" style="padding: 10px">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="Input.Code" type="hidden" />

                    <div class="u-form-email u-form-group u-form-group-1">
                        <label for="name-5a14" class="u-label" wfd-invisible="true">Email</label>
                        <input type="email" placeholder="" asp-for="Input.Email" class="u-border-2 u-border-black u-border-no-left u-border-no-right u-border-no-top u-input u-input-rectangle u-white" required="required">

                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="u-form-group u-form-group-2">
                        <label for="email-5a14" class="u-label" wfd-invisible="true">Password</label>
                        <input type="password" asp-for="Input.Password" class="u-border-2 u-border-black u-border-no-left u-border-no-right u-border-no-top u-input u-input-rectangle u-white" required="required">
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="u-form-group u-form-group-3">
                        <label for="message-5a14" class="u-label" wfd-invisible="true">Confirmar Password</label>
                        <input placeholder="" asp-for="Input.ConfirmPassword" class="u-border-2 u-border-black u-border-no-left u-border-no-right u-border-no-top u-input u-input-rectangle u-white" required="required" type="password">
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="u-align-center u-form-group u-form-submit u-form-group-4">
                        <button type="submit" class="u-border-2 u-border-black u-btn u-btn-submit u-button-style u-hover-black u-none u-text-black u-text-hover-white u-btn-1">Repor</button>
                    </div>
                </form>
                
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
