@page
@model AsMinhasDuvidas.Pages.ApoioAdmin.CriarCursoModel

@{ Layout = "~/Pages/Shared/_Layout2.cshtml"; }


<link rel="stylesheet" href="~/css/CriarCurso.css" />


 
<section class="u-clearfix u-section-1" id="sec-bbc6">
    <div class="u-clearfix u-sheet u-valign-middle-lg u-valign-middle-md u-sheet-1">
        <!--product--><!--product_options_json--><!--{"source":""}--><!--/product_options_json--><!--product_item-->
        <div class="u-container-style u-expanded-width u-product u-shape-rectangle u-product-1">
            <div class="u-container-layout u-valign-top-md u-container-layout-1">
                <h2 class="u-text u-text-default u-text-1">Criar Curso</h2><!--product_image-->
                <hr />
                @if (@Model.StatusMessage != null)
                {
                 <h3 class="alert alert-danger">@Model.StatusMessage </h3>
                }
                <img alt="" class="u-expanded-width-xs u-hidden-sm u-hidden-xs u-image u-image-default u-product-control u-image-1" src="~/css/imagens/subjects1.jpg"><!--/product_image-->
                <div class="u-form u-form-1">
                    <form method="post" style="padding: 10px">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label class="u-label">ID</label>
                            <input asp-for="Curso.ID" type="number" class="u-border-1 form-control u-border-grey-30 u-input u-input-rectangle u-radius-20 u-white" placeholder="Insira o Id do curso" required>
                            <span asp-validation-for="Curso.ID" class="text-danger"></span>

                        </div>
                        <div class="form-group ">
                            <label class="u-label">Nome</label>
                            <input asp-for="Curso.Name" class="form-control u-border-1 u-border-grey-30 u-input u-input-rectangle u-radius-20 u-white" type="text" placeholder="Insira o Nome do Curso" required>
                            <span asp-validation-for="Curso.Name" class="text-danger"></span>

                        </div>
                        <div class="u-align-left form-group ">
                            <input type="submit" value="Create" style=" border-radius:4px;"class=" u-border-0 u-btn u-btn-round  u-button-style u-gradient  u-radius-29 u-btn-1 btn btn-primary">
                        </div>
                    </form>
                </div>
            </div>
        </div><!--/product_item--><!--/product-->
    </div>
</section>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
