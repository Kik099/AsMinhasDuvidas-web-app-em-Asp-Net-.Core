@page
@model AsMinhasDuvidas.Pages.Foruns.CreateModel

@{ Layout = "~/Pages/Shared/_Layout2.cshtml";}



<link rel="stylesheet" href="~/css/CriarForum.css" />
<section class="u-align-center u-clearfix u-image u-shading u-section-1" id="carousel_be0b">
    <div class="u-clearfix u-sheet u-sheet-1">
        <div class="u-palette-2-base u-shape u-shape-rectangle u-shape-1"></div>
        <div class="u-container-style u-expanded-width-sm u-expanded-width-xs u-group u-white u-group-1">
            <div class="u-container-layout u-valign-middle-lg u-valign-middle-xl u-container-layout-1">
                <h2 class="u-align-center u-text u-text-1">Criar Forum</h2>
                <div class="u-form u-form-1">
                    <form method="post" class="u-clearfix u-form-spacing-13 u-form-vertical u-inner-form" style="padding: 0;">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="u-form-group u-form-name">
                            <label for="name-f18c" class="u-label">Titulo</label>
                            <input type="text" placeholder="Inserir titulo" asp-for="Forum.Titulo" class="u-grey-5 u-input u-input-rectangle u-input-1" required="" maxlength="50">
                            <span asp-validation-for="Forum.Titulo" class="text-danger"></span>
                        </div>
                        <div class="u-form-group u-form-message u-form-group-2">
                            <label for="message-1015" class="u-label">Descrição</label>
                            <textarea placeholder="Inserir descrição" rows="6" cols="50" asp-for="Forum.Descricao" class="u-grey-5 u-input u-input-rectangle u-input-2" required=""></textarea>
                            <span asp-validation-for="Forum.Descricao" class="text-danger"></span>
                        </div>
                        <div class="u-align-center u-form-group u-form-submit">
                            <button class="u-black u-btn u-btn-submit u-button-style u-btn-1" type="submit">Criar</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}